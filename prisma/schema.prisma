generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id               Int      @id @default(autoincrement())
  title            String
  description      String
  imageUrl         String
  category         String   // Webdesign, Webentwickler, Fotograf
  techStack        String   // Store as comma-separated string
  
  // UX Case Study Fields
  personaName      String?
  personaImage     String?
  personaBio       String?
  painPoints       String?  // comma-separated or text
  userJourneyData  String?  // JSON string for Chart.js
  
  // Empathy Map
  empathySays      String?
  empathyThinks    String?
  empathyFeels     String?
  empathyDoes      String?

  // Gallery
  galleryImages    String?  // JSON array of image URLs

  createdAt        DateTime @default(now())
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  company   String?
  avatar    String?
  rating    Int      @default(5)
  text      String
  createdAt DateTime @default(now())
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}
